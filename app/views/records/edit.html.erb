<h1>Edit record entry.</h1>

<%= form_tag "/records/#{@record.id}", method: :patch do %>
<div>
  <%= label_tag :artist %>
  <%= text_field_tag :artist, @record.artist %>
</div>

<div>
  <%= label_tag :cd_title %>
  <%= text_field_tag :cd_title, @record.cd_title  %>
</div>

<div>
  <%= label_tag :year %>
  <%= text_field_tag :year, @record.year %>
</div>

<div>
  <%= label_tag :record_label %>
  <%= text_field_tag :record_label, @record.record_label %>
</div>

<div>
  <%= label_tag :cost %>
  <%= text_field_tag :cost, @record.cost  %>
</div>

<div>
  <%= label_tag :image %>
  <%= text_field_tag :image, @record.image  %>
</div>

<%= submit_tag 'Edit record' %>
<% end %>
